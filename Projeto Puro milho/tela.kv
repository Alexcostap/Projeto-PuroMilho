ScreenManager:
    Menu:
    TelaAjustePreco:
    TelaRetorno:
    TelaSaida:

<Menu>:
    name: 'Menu'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Button:
            text: 'Inserir a saída'
            on_press: root.manager.current = 'Saida'
        
        Button:
            text: 'Inserir o retorno'
            on_press: root.manager.current = 'Retorno'
        
        Button:
            text: 'Ajudar o preço dos itens'
            on_press: root.manager.current = 'Ajuste de Preço'
<TelaAjustePreco>:
    name: 'Ajuste de Preço'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: 'Tela de Ajuste de Preço'
            font_size: 24
            size_hint_y: None
            height: '50dp'
            color: 1, 1, 1, 1  # Cor do texto (branco)
            canvas.before:
                Color:
                    rgba: 0.2, 0.6, 0.8, 1  # Cor de fundo (azul)
                Rectangle:
                    pos: self.pos
                    size: self.size
        
        Label:
            id: resultado_label
            text: ''
            size_hint_y: None
            height: 50
            color: 0, 1, 0, 1  # Cor do texto (Verde)

        BoxLayout:
            size_hint_y: None
            height: 40  # Altura do Label + TextInput
            spacing: 10

            Label:
                text: 'Milho Cozido:'
                size_hint_x: 0.25   
                size_hint_y: None
                height: 30  
                color: 0, 0, 1, 1  

            TextInput:
                id: vlrMilho
                input_filter: 'float'
                multiline: False
                size_hint_x: 0.75  
                size_hint_y: None
                height: 40 
                background_color: 1, 1, 1, 1  
                foreground_color: 0, 0, 0, 1  
                canvas.before:  
                    Color:
                        rgba: 0,0,0,1  
                    Line:
                        width: 1.5  
                        rectangle: (self.x, self.y, self.width, self.height)
                halign: 'center'  # Alinha o texto à direita
                valign: 'middle'  # Alinha o texto verticalmente ao meio        

